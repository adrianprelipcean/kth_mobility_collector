<?xml version="1.0" encoding="UTF-8"?>
<project
    name="custom_rules"
    default="war" >

    <path id="compile.classpath" >
        <fileset dir="WebContent/WEB-INF/lib" >
            <include name="*.jar" />
        </fileset>
    </path>

    <target
        name="config_devel"
        depends="-set-devel-props, config" >
    </target>

    <target name="init" >
        <mkdir dir="build/classes" />
        <mkdir dir="webapps" />
    </target>

    <target
        name="compile"
        depends="init" >

        <javac
            debug="true"
            destdir="build/classes"
            includeantruntime="false"
            srcdir="src"
            target="1.7" >
            <classpath refid="compile.classpath" />
        </javac>
    </target>

    <target
        name="war"
        depends="clean,-set-devel-props, config, compile" >

        <property
            name="config.username"
            value="foo" />

        <property
            name="config.password"
            value="foo" />

        <property
            name="config.url"
            value="foo.com" />

        <property
            name="config.port"
            value="foo" />

        <war
            destfile="webapps/Mobility_Collector_Servlet.war"
            needxmlfile="false" >

            <fileset dir="WebContent" />

            <lib dir="WebContent/WEB-INF/lib" />

            <classes dir="build/classes" />
        </war>
    </target>

    <target name="clean" >

        <delete dir="dist" />

        <delete dir="build" />
    </target>

    <target name="-set-devel-props" >

        <property
            name="config.username"
            value="foo" />

        <property
            name="config.password"
            value="foo" />

        <property
            name="config.url"
            value="foo.com" />

        <property
            name="config.port"
            value="foo" />


    </target>

    <target name="config" >

        <property
            name="config-target-path"
            value="src/utils" />

        <chmod
            file="${config-target-path}/Variables.java"
            perm="+w" />

        <!-- Copy the varialbes file, replacing tokens in the file. -->

        <copy
            encoding="utf-8"
            file="config/Variables.java"
            overwrite="true"
            todir="${config-target-path}" >

            <filterset>

                <filter
                    token="CONFIG.USERNAME"
                    value="${config.username}" />

                <filter
                    token="CONFIG.PASSWORD"
                    value="${config.password}" />

                <filter
                    token="CONFIG.URL"
                    value="${config.url}" />

                <filter
                    token="CONFIG.PORT"
                    value="${config.port}" />

            </filterset>
        </copy>

        <chmod
            file="${config-target-path}/Variables.java"
            perm="-w" />
    </target>

</project>
